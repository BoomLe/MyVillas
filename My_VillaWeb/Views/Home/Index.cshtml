@using Microsoft.AspNetCore.Components
@using My_VillaWeb.Models.Dtos
@model IEnumerable<VillaDTO>

<img class="d-block w-100" src="/Images/confirmation.jpg" alt="">

<hr />
<div class="row" style="--bs-gutter-x:0">
    @foreach(var item in Model)
    {
       <div class="p-4 col-md-12 col-lg-6">
           <div class="row" style="border-radius:20px; border:1px solid #ffffff">
               <div class="col-4">
                   <img class="d-block w-100" style="border-radius:20px;" src="@item.ImageUrl" alt="Frist slide">
               </div>
               <div class="col-8">
                   <p class="card-title text-warning" style="font-size:xx-large">@item.Name</p>
                   <p class="card-text">
                        @((MarkupString)item.Details)
                   </p>
               </div>
               <div class="col-12">
                   <div class="row pb-3 pt-2">
                       <div class="col-4">
                           <a href="" class="btn btn-success form-control btn-block">Book</a>
                       </div>
                       <div class="col-4">
                           <span class="">Phòng ngủ : @item.Occupancy người</span>
                           <br>
                           <span class="pt-1">Diện tích phòng : @item.Sqft m2</span>
                           <br>
                       </div>
                       <div class="col-4">
                           <span class="text-warning float-end font-weight-bold pt-1" style="font-size: 25px;">
                               VNĐ
                               <span style="border-bottom: 1px solid #ff6a00">
                                    @item.Rate.ToString("0,000,000")
                               </span>
                           </span>
                       </div>
                   </div>
               </div>
           </div>
       </div>
    }
</div>
